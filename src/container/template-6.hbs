<header class="header">
	<a href="#test">
		{{> logo}}
	</a>


	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<h2 class="form_title">{{title}}</h2>

		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<div class="form_border"></div>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<h6 class="upd_title">{{title}}</h6>
	{{#each list}}
	<div class="upd_message">
		<div class="upd_icon"></div>
		<div class="upd_nick_des">
			<strong>@{{nickname}}</strong>
			<p>{{description}}</p>
		</div>
	</div>
	{{/each}}
	<a href="{{show_all.url}}" class="upd_link">{{show_all.text}}</a>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<div class="exp">
		<h2 class="exp_title">{{title}}</h2>
		<div class="exp_badge">{{badge}}</div>
	</div>

	<div class="exp_list">
		{{#each list}}
		<div class="exp_list_card">
			<strong class="exp_card_title">{{name}}</strong>
			<p class="exp_card_text">{{details}}</p>
		</div>
		{{/each}}
	</div>

	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{>nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>